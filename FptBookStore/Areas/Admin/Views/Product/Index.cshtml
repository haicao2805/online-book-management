@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
@model IEnumerable<Product>

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Product List</h2>
    </div>
    <div class="col-6 text-right ">
        <a class="btn btn-primary text-white" asp-action="Upsert">Create New Product</a>
    </div>
</div>

<br />
@if (Model.Count() > 0)
{

    <div class="p-4 border rounded">
        <table class="table table-striped table-bordered" id="tblData" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prd in Model)
                {
                    <tr>
                        <td class="text-black-100">
                            @prd.Title
                        </td>
                        <td class="text-black-100">
                            @prd.ISBN
                        </td>
                        <td class="text-black-100">
                            @prd.Price
                        </td>
                        <td class="text-black-100">
                            @prd.Author
                        </td>
                        <td class="text-black-100">
                            @prd.CategoryId
                        </td>
                        <td class="text-black-100">
                            @prd.Quantity
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h1>
        Not created product yet
    </h1>
    <a class="btn btn-primary text-white" asp-action="Upsert">Create New Product Now</a>

}

@section Scripts{
    <script src="~/js/product.js"></script>
}