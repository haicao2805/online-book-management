@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Category>

<br />
<div style="padding: 100px">

    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right ">
            <a class="btn btn-dark text-white" asp-action="Upsert">Create New Category</a>
        </div>
    </div>

    <br />
    @if (Model.Count() > 0)
    {
        <div class="p-4 border rounded">
            <table class="table table-bordered table-hover font-size-3" id="tblData" style="width:100%">
                <thead class="thead-dark">
                    <tr class="table-info">
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cate in Model)
                    {
                        <tr>
                            <td class="text-black-100">
                                @cate.Name
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h1>
            Not created category yet
        </h1>
        <a class="btn btn-dark text-white" asp-action="Upsert">Create New Category</a>

    }
</div>

@section Scripts{
    <script src="~/js/category.js"></script>
}