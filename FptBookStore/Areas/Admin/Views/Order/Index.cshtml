@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var status = Context.Request.Query["status"];

    var inprocess = "text-primary";
    var pending = "text-primary";
    var compeleted = "text-primary";
    var rejected = "text-primary";
    var all = "text-primary";

    switch (status)
    {
        case "inprocess":
            inprocess = "active text-white";
            break;
        case "pending":
            pending = "active text-white";
            break;
        case "compeleted":
            compeleted = "active text-white";
            break;
        case "rejected":
            rejected = "active text-white";
            break;
        default:
            all = "active text-white";
            break;
    }
}

<div class="border p-3">
    <div class="justify-content-between d-flex mb-3">
        <div class="p-2">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a asp-controller="Order" asp-action="Index" asp-route-status="inprocess" style="text-decoration:none;">
                <li class="list-group-item @inprocess">In Process</li>
                </a>

                <a asp-controller="Order" asp-action="Index" asp-route-status="pending" style="text-decoration:none;">
                <li class="list-group-item @pending">Payment Pending</li>
                </a>

                <a asp-controller="Order" asp-action="Index" asp-route-status="compeleted" style="text-decoration:none;">
                <li class="list-group-item @compeleted">Compeleted</li>
                </a>

                <a asp-controller="Order" asp-action="Index" asp-route-status="rejected" style="text-decoration:none;">
                <li class="list-group-item @rejected">Rejected</li>
                </a>

                <a asp-controller="Order" asp-action="Index" asp-route-status="all" style="text-decoration:none;">
                <li class="list-group-item @all">All</li>
                </a>
            </ul>
        </div>
    </div>
    <br />
    <table class="table table-striped table-bordered" id="tblData" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Order Status</th>
                <th>Order Total</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/order.js"></script>
}
