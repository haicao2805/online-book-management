@model FptBookStore.ViewModels.OrderDetailViewModel
@using FptBookStore.Utility
@using System.IO
@using Microsoft.Extensions.Configuration

<form method="post">
    <input type="hidden" asp-for="OrderHeader.Id" />
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1 font-size-4">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Order Details
                </div>
                <div class="col-12 col-md-4 offset-md-2">
                    <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn btn-outline-carolina text-center text-white font-size-3 form-control btn-sm" style="padding-top: 12px">Back to Orders List </a>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">Shipping Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @if (User.IsInRole(UserRole.Admin))
                                    {
                                        <input asp-for="OrderHeader.Name" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="OrderHeader.Name" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @if (User.IsInRole(UserRole.Admin))
                                    {
                                        <input asp-for="OrderHeader.PhoneNumber" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="OrderHeader.PhoneNumber" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole(UserRole.Admin))
                                    {
                                        <input asp-for="OrderHeader.StreetAddress" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="OrderHeader.StreetAddress" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (User.IsInRole(UserRole.Admin))
                                    {
                                        <input asp-for="OrderHeader.City" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="OrderHeader.City" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    @if (User.IsInRole(UserRole.Admin))
                                    {
                                        <input asp-for="OrderHeader.State" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="OrderHeader.State" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Postal Code</div>
                                <div class="col-9">
                                    @if (User.IsInRole(UserRole.Admin))
                                    {
                                        <input asp-for="OrderHeader.PostalCode" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="OrderHeader.PostalCode" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    @if (User.IsInRole(UserRole.Admin))
                                    {
                                        <input asp-for="OrderHeader.ApplicationUser.Email" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="OrderHeader.ApplicationUser.Email" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    @if (User.IsInRole(UserRole.Admin))
                                    {
                                        <input value="@Model.OrderHeader.OrderDate.ToShortDateString()" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input value="@Model.OrderHeader.OrderDate.ToShortDateString()" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole(UserRole.Admin))
                                    {
                                        <input asp-for="OrderHeader.Carrier" id="carrier" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="OrderHeader.Carrier" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                    @if (User.IsInRole(UserRole.Admin))
                                    {
                                        <input asp-for="OrderHeader.TrackingNumber" id="trackingNumber" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="OrderHeader.TrackingNumber" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    <input value="@Model.OrderHeader.ShippingDate.ToShortDateString()" id="shippingDate" type="text" readonly class="form-control" />
                                </div>
                            </div>
                            @if (User.IsInRole(UserRole.Admin))
                            {
                                <div class="row my-1">
                                    <div class="col-3">Transaction ID</div>
                                    <div class="col-9">
                                        <input asp-for="OrderHeader.TransactionId" type="text" readonly class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    @if (Model.OrderHeader.TransactionId == null)
                                    {
                                        <div class="col-3">Payment Due Date</div>
                                        <div class="col-9">
                                            <input value="@Model.OrderHeader.PaymentDueDate.ToShortDateString()" readonly type="text" class="form-control" />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-3">Payment Date</div>
                                        <div class="col-9">
                                            <input value="@Model.OrderHeader.PaymentDate.ToShortDateString()" readonly id="paymentDate" type="text" class="form-control" />
                                        </div>
                                    }
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Payment Status</div>
                                    <div class="col-9">
                                        <input asp-for="OrderHeader.PaymentStatus" type="text" readonly class="form-control" />
                                    </div>
                                </div>
                            }

                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Details</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <input type="hidden" asp-for="@item.Id" />
                                                <h6 class="my-0">@item.Product.Title</h6>
                                                <small class="text-muted">Price : @item.Price</small><br />
                                                <small class="text-muted">Quantity : @item.Count</small>
                                            </div>
                                            <div class="col-4">
                                                <h5 class="text-success">@(item.Count * item.Price)</h5>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-black">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-right">
                                            <h5 class="text-white">@Model.OrderHeader.OrderTotal</h5>
                                        </div>
                                    </div>
                                </li>

                            </ul>
                            <br/>
                            <br/>
                            <br/>
                            <hr/>
                            @if (User.IsInRole(UserRole.Admin))
                            {
                                <br />
                                @if (Model.OrderHeader.OrderStatus == Status.Approved)
                                {
                                    <a asp-action="StartProcessing" asp-route-id="@Model.OrderHeader.Id" class="btn btn-info form-control">Start Processing</a>
                                }
                                @if (Model.OrderHeader.OrderStatus == Status.Processing)
                                {
                                    <input formmethod="post" formaction="/Admin/Order/ShipOrder"
                                           type="submit" value="Ship Order" onclick="return validateInput();"
                                           class="btn btn-outline-primary form-control" />
                                }
                            }
                            else
                            {
                                <label class="btn btn-primary form-control">@Model.OrderHeader.OrderStatus</label>
                            }

                            @if (Model.OrderHeader.PaymentStatus == PaymentStatus.DelayedPayment
                             && Model.OrderHeader.OrderStatus == Status.Shipped)
                            {
                                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                        @{ string stripePublishableKey = new ConfigurationBuilder().SetBasePath(Directory.GetCurrentDirectory()).AddJsonFile("appsettings.json", true, true).Build()["StripeStrings:StripePublishableKey"]; }
                                        data-key="@stripePublishableKey"
                                        @{ var orderTotal = @Model.OrderHeader.OrderTotal * 100;}
                                        data-amount=@orderTotal
                                        data-name="FPT BookStore"
                                        data-label="Place Order"
                                        data-locale="auto"
                                        data-allow-remember-me="false"
                                        data-image="https://stripe.com/img/documentation/checkout/marketplace.png"></script>
                                <script>document.getElementsByClassName("stripe-button-el")[0].style.display = "none";</script>
                                <button type="submit" value="Place Order" class="btn btn-success form-control">Pay Now</button>
                            }

                            @if (Model.OrderHeader.OrderStatus != Status.Refunded
                    && Model.OrderHeader.OrderStatus != Status.Canceled
                    && (User.IsInRole(UserRole.Admin)))
                            {
                                <div class="pt-2">
                                    <a asp-area="Admin" asp-controller="Order" asp-action="CancelOrder" asp-route-id="@Model.OrderHeader.Id"
                                       class="btn btn-outline-danger form-control">Cancel Order</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script>function validateInput() {
            if (document.getElementById("trackingNumber").value.toString() == "") {
                swal("Error", "Please enter tracking number", "error");
                return false;
            }

            if (document.getElementById("carrier").value.toString() == '') {
                swal("Error", "Please enter carrier", "error");
                return false;
            }

            return true;
        }

        $(document).ready(function () {
            var shippingDate = document.getElementById("shippingDate");
            if (shippingDate.value == '1/1/0001') {
                shippingDate.value = '';
            }
            var shippingDate = document.getElementById("paymentDate");
            if (shippingDate.value == '1/1/0001') {
                shippingDate.value = '';
            }
        })</script>
}