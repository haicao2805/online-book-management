@model FptBookStore.Entities.ShoppingCart
@{
    var errorMessage = ViewData["errorMessage"];
}

<form method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-info">@Model.Product.Title</h1>
                    <h5 class="text-dark">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-check-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                            <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                    &nbsp; Author: @Model.Product.Author</h5>
                </div>
                <div class="col-12 col-md-6 text-md-right pt-4">
                    <span class="badge badge-warning pt-2" style="height:30px; font-size: 15px">@Model.Product.Category.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">ISBN: @Model.Product.ISBN</h5>
                            </div>
                            <div class="row text-center pl-2" style="font-weight:500">
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>Quantity</div>
                                </div>
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>1-49</div>
                                </div>
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>50-99</div>
                                </div>
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>100+</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2" style="color:white; font-weight:bold">
                                <div class="p-1 col-2 bg-dark">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2 bg-dark">
                                    <div>@Model.Product.Price</div>
                                </div>
                                <div class="p-1 col-2 bg-dark">
                                    <div>@Model.Product.Price50</div>
                                </div>
                                <div class="p-1 col-2 bg-dark">
                                    <div>@Model.Product.Price100</div>
                                </div>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted">Description:</h5>
                            </div>

                            <div class="row pl-2" style="margin-left: 50px">
                                <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-4 text-muted" style="font-size: 10px">
                                    <h5>Remain Quantity</h5>
                                </div>
                                <div class="p-1 col-8">
                                    <div style="margin-left:10px; font-weight: bold; font-size: 20px" class="text-warning">@Model.Product.Quantity</div>
                                </div>
                            </div>
                            <div class="row pl-2">
                                <div class="col-4 text-muted">
                                    <h5>Quantity</h5>
                                </div>
                                <div class="col-8"><input class="form-control" asp-for="Count" /></div>
                                <span asp-validation-for="Count" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg"
                           style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">

                        <button type="submit" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control"
                                style="height:50px;">
                            Add to Cart
                        </button>

                    </div>
                </div>
                <div class="col-12">
                    <div class="col-5 offset-7">
                        <p class="text-danger">@errorMessage</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>